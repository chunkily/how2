extends layout.pug

block content
  form(method='GET', action='/search')
    label Search 
      input(type='text', name='q', autofocus, value=search)
    input(type='submit')
  if results.length > 0
    p #{results.length} results found.
    ul
      each result in results
        li
          a(href=result.path)= result.text
  else
    p No Results Found
